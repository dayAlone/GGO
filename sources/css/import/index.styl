.index
	h1
		font-size 25px
		padding 0 25px
		@media (min-width: scr_sm)
			font-size 40px
		@media (min-width: scr_md)
			font-size 46px
	.fotorama
		&__arr
			background transparent
			top 0
			width 30px
			height 100%
			@media (min-width: scr_sm)
				width 50px
			svg
				position absolute
				top 50%
				left 50%
				margin-top 55px
				max-width 70%
				transform translateY(-50%) translateX(-50%)
				path
					fill white
	.slider
		full-width()
		&, .fotorama__stage
			min-height 500px
		&__frame
			full-width()
			position relative
			width 100%
		&__down
			background #4381d9
			text-align: center
			display inline-block
			position absolute
			z-index 200
			border-radius 50%
			color white
			top -100px
			font-size 10px
			left 50%
			margin-left -40px
			width 80px
			height 80px
			padding 15px 10px
			line-height 11px
			@media (min-width: scr_sm)
				line-height 15px
				padding 25px 20px
				font-size 13px
				top -150px
				left 50%
				margin-left -55px
				width 110px
				height 110px
			svg
				margin-top 5px
				width 30px
				path
					fill white

		&__section
			color #f0f2ee
			line-height 30px
			font-size 14px
			@media (min-width: scr_sm)
				line-height 45px
				font-size 19px
			svg
				position relative
				top -1px
				margin-right 10px
				@media (min-width: scr_sm)
					margin-right 20px
		&__item
			height 100%
			min-height 500px
			full-width()
			background-size cover
			background-position center center
			h1
				margin-top 0
				padding 0
				font-family 'Direct'
				color white
				display inline-block
				margin-bottom 30px
				font-size 20px
				line-height 1.2
				@media (min-width: scr_sm)
					font-size 35px
					max-width 60%
					
			.button
				border 0
				background #e33842
				color white
				text-transform: none
				font-size 14px
				font-weight: normal
				letter-spacing 0
				min-width 0
				height 35px
				line-height 35px
				padding 0 40px
				&:hover
					background white !important
					color red
			svg
				display inline-block
				vertical-align: middle
				width 30px
				height 30px
				@media (min-width: scr_sm)
					width 40px
					height 40px
				path
					fill #f0f2ee
			.page__divider
				border-color #e5363d
				min-width 76px
				margin 10px 0
				display inline-block
				@media (min-width: scr_sm)
					margin 20px 0
			.container
				padding 80px 40px
	.sections
		full-width()
		padding 20px 0
		@media (min-width: scr_sm)
			padding 50px 0
		overflow: hidden
	.more
		t all
		font-size 14px
		svg
			transform rotate(-90deg)
			width 45px
			height 45px
			border-radius 50%
			border 2px solid black
			padding 7px
			path
				stroke-width 1px
				stroke black
		color blue
		&:hover
			svg
				t all
				border-color blue
				path
					stroke blue
	.numbers
		background #052b6d
		color #dde2ed
		font-size 17px
		overflow hidden
		full-width()
		span
			color #4382da
			display inline-block
			margin-bottom 5px
		.page__divider
			border-color #123a7e
			&.page__divider--small
				display inline-block
				margin 10px 0 15px
				border-color #4382da
		h1
			color white
		.container
			padding 20px 0
			@media (min-width: scr_sm)
				padding 60px 0
		.number__value
			color white
		.more
			opacity: .5
			color white
			svg
				border-color white
				path
					stroke white
			&:hover
				opacity 1
		
	.map
		full-width()
		overflow hidden
		background #d6dbde url(/layout/images/map.jpg) center center no-repeat
		background-size auto 90%
		padding 80px 0
		min-height 500px
		@media (min-width: scr_sm)
			min-height 700px
			height 100vh
		background 
		position relative
		h1
			margin-top -80px
			@media (min-width: scr_sm)
				margin-top -100px
		&__text
			
			width 100%
			@media (min-width: scr_sm)
				font-size 17px
			.page__divider
				margin 5px 0
				display inline-block
				float: none
				min-width 60%
				border-color #4783d4
			.number__value
				font-size 80px
				@media (min-width: scr_sm)
					font-size 124px
				line-height: .84
		&__content, &__text
			position absolute
			left 50%
			top 50%
			transform translateX(-50%) translateY(-50%)
		&__content
			width 300px
			height 300px
			@media (min-width: scr_sm)
				width 500px
				height 500px
			text-align: center
			border-radius 50%
			border 3px solid #4481d7
			margin-top 25px
		.more
			position absolute
			bottom -50px
			transform translateX(-50%)
			left 50%
			svg
				background #4783d4
				border-color #4783d4
				path
					stroke white
			&:hover
				svg
					background blue
					border-color blue
					
			
			